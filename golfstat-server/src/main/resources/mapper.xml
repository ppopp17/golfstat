<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="golfstat">
    
    <select id="getNumberOfGolfers" resultType="Integer">
        SELECT count(*) from golfer
    </select>
    
    <select id="getNumberOfCourses" resultType="Integer">
        SELECT count(*) from course
    </select>
    
    <select id="getNumberOfRounds" resultType="Integer">
        SELECT count(*) from round
    </select>
</mapper>